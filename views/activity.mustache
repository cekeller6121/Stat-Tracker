      <li>{{name}}</li>
      <li>{{type}}</li>
      <li>{{stat}} Created at: {{date}}</li>
      <li><form method="post"><input name="updateBox" type="text" placeholder="update stat here"></form></li>
      {{/activity}}
    </ul>
  </body>
</html>
